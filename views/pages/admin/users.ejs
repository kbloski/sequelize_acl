<%- include('../partials/head', { title: 'Admin view users'}) %>
<body>
    <%- include('../partials/navbar') %>
    <h3>Users list</h3>
    <p>
        <% if (users) { %>
            <table class="table">
                <tr>
                    <th>_id</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>School_Id</th>
                    <th>Role</th>
                    <th>Edit</th>
                </tr>
                <% for (const el of users){ %>
                    <tr>
                        <td><%= el.id %></td>
                        <td><%= el.name %></td>
                        <td><%= el.surname %></td>
                        <td><%= el.email %></td>
                        <td><%= el.age %></td>
                        <td><%= el.address %></td>
                        <td><%= el.schoolId %></td>
                        <td><%= el.role %></td>
                        <td>
                            <% if (user.id != el.id){ %>
                                    <a href="/admin/users/edit/<%= el.id %>">Edit</a>
                            <% } %>
                            <a href="/admin/users/view/<%= el.id %>">View</a>
                        </td>
                    </tr>  
                <% } %>
                
            </table>
            <a href="/admin/users/add"><button class="btn">Add user</button></a>
        <% }; %>
    </p>


    <%- include('../partials/footer') %>
</body>
</html>